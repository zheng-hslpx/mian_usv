{
  "env_paras": {
    "num_tasks": 40,
    "num_usvs": 4,
    "batch_size": 20,
    "task_feat_dim": 4,
    "usv_feat_dim": 4,
    "show_mode": "print",
    "valid_batch_size": 100,
    "map_size": [800, 800],
    "battery_capacity": 1200,
    "usv_speed": 5,
    "charge_time": 10,
    "energy_cost_per_distance": 1.0,
    "task_time_energy_ratio": 0.25,
    "enable_pre_validation": true,
    "device": "cuda:0"
  },
  "model_paras": {
    "d": 32,
    "hidden_dim": 128,
    "num_layers": 2,
    "num_layers_action": 3,
    "num_layers_value": 2,
    "eta": 3,
    "out_size_usv": 32,
    "out_size_task": 32
  },
  "train_paras": {
    "lr": 0.0002,
    "betas": [0.9, 0.999],
    "gamma": 1.0,
    "lam": 0.95,
    "K_epochs": 3,
    "eps_clip": 0.2,
    "A_coeff": 1.0,
    "vf_coeff": 0.5,
    "entropy_coeff": 0.01,
    "max_iterations": 1000,
    "save_timestep": 10,
    "update_timestep": 1,
    "viz": true,
    "viz_name": "USV_Training",
    "minibatch_size": 512,
    "parallel_iter": 20
  },
  "save_paras": {
    "base_path": "./save",
    "experiment_name": "usv_experiment",
    "experiment_version": "v1.0",
    "auto_version": true,
    "max_best_models": 3,
    "save_interval": 10,
    "save_training_log": true,
    "checkpoint_format": "pt",
    "naming_pattern": "{exp_name}_{task_count}x{usv_count}_{timestamp}",
    "save_checkpoints": true,
    "backup_config": true,
    "compress_old_models": false
  }
}
